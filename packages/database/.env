# PRISMA CONFIGURATION
# ============================================================================
# Database provider (don't change unless switching databases)
DATABASE_PROVIDER="postgresql"

# Prisma shadow database for migrations (Neon provides this automatically)
SHADOW_DATABASE_URL=""

# ============================================================================
# CONNECTION POOL SETTINGS
# ============================================================================
DATABASE_CONNECTION_LIMIT=10
DATABASE_TIMEOUT=20000
DATABASE_POOL_TIMEOUT=10000

# ============================================================================
# SSL CONFIGURATION
# ============================================================================
DATABASE_SSL_MODE="require"
DATABASE_SSL_CERT=""
DATABASE_SSL_KEY=""
DATABASE_SSL_CA=""

# ============================================================================
# MIGRATION SETTINGS
# ============================================================================
PRISMA_SCHEMA_DISABLE_ADVISORY_LOCK=false
PRISMA_GENERATE_DATAPROXY=false

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================
PRISMA_HIDE_UPDATE_MESSAGE=true
PRISMA_CLI_QUERY_ENGINE_TYPE="binary"

# ============================================================================
# LOGGING & DEBUGGING
# ============================================================================
DATABASE_LOGGING=false
PRISMA_DEBUG=false
DATABASE_SLOW_QUERY_THRESHOLD=1000  # milliseconds